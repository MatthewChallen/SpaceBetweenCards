import java.awt.Graphics;
import java.awt.image.BufferedImage;

public class Sprite {
	//This is a stored image that will be displayed at certain locations on request.
	private BufferedImage img;
	private String name;
	
	public Sprite(BufferedImage img, String name) {
		this.img = img;
		this.name = name;
	}
	
	public void paint(Graphics Screen, int xLocation, int yLocation) {
		//This method paints the sprite at the chosen location.
		Screen.drawImage(this.img, xLocation, yLocation, null);
	}
	
	public String getName() {
		return this.name;
	}
}
